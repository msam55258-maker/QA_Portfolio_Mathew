		{
			"name": "POST Create User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Status",
							"pm.test(\"Status code is 201 or 200\", () => {",
							"  pm.expect([201,200]).to.include(pm.response.code);",
							"});",
							"",
							"// Basic id check",
							"pm.test(\"Response has id (non-empty)\", () => {",
							"  const json = pm.response.json();",
							"  pm.expect(json).to.have.property('id').that.is.ok;",
							"});",
							"",
							"// Try to compare echoed fields only if request raw exists",
							"pm.test(\"If request body present, response echoes request fields\", () => {",
							"  let reqBody = null;",
							"  try {",
							"    if (pm.request.body && pm.request.body.raw) {",
							"      reqBody = JSON.parse(pm.request.body.raw);",
							"    }",
							"  } catch (e) {",
							"    // parsing failed â€” leave reqBody null",
							"  }",
							"",
							"  const json = pm.response.json();",
							"  if (reqBody) {",
							"    if (reqBody.name !== undefined) pm.expect(json.name).to.eql(reqBody.name);",
							"    if (reqBody.job !== undefined) pm.expect(json.job).to.eql(reqBody.job);",
							"  } else {",
							"    // If request body not available, assert at least id exists (we already did)",
							"    pm.expect(true).to.be.true;",
							"  }",
							"});",
							"",
							"// Response time",
							"pm.test(\"Response time under 2000 ms\", () => pm.expect(pm.response.responseTime).to.be.below(2000));"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
